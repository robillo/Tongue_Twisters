<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.firstapp.robinpc.tongue_twisters.MainActivity"
    tools:showIn="@layout/activity_main">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fullscreen_content"
        android:keepScreenOn="true"
        android:textColor="#33b5e5"
        android:textStyle="bold"
        android:textSize="50sp"
        android:gravity="center"
        android:clickable="false">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="16dp"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="LEVEL1"
                        android:id="@+id/level1"
                        android:textAlignment="center"
                        android:onClick="firstlevel"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:nestedScrollingEnabled="true"
                        android:focusable="false"
                        android:focusableInTouchMode="true"
                        android:clickable="true" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="16dp"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="LEVEL2"
                        android:onClick="secondlevel"
                        android:id="@+id/level2"
                        android:textAlignment="center"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:elevation="4dp" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="16dp"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="LEVEL3"
                        android:onClick="thirdlevel"
                        android:id="@+id/level3"
                        android:textAlignment="center"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:elevation="4dp" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="16dp"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="LEVEL4"
                        android:onClick="fourthlevel"
                        android:id="@+id/level4"
                        android:textAlignment="center"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:elevation="4dp"/>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="16dp"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="LEVEL5"
                        android:id="@+id/level5"
                        android:onClick="fifthlevel"
                        android:textAlignment="center"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:elevation="4dp" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="16dp"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="LEVEL6"
                        android:id="@+id/level6"
                        android:onClick="sixthlevel"
                        android:textAlignment="center"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:elevation="4dp"/>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="16dp"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="LEVEL7"
                        android:onClick="seventhlevel"
                        android:id="@+id/level7"
                        android:textAlignment="center"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:elevation="4dp" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="16dp"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="LEVEL8"
                        android:onClick="eighthlevel"
                        android:id="@+id/level8"
                        android:textAlignment="center"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:elevation="4dp"/>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="16dp"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="LEVEL9"
                        android:onClick="ninthlevel"
                        android:id="@+id/level9"
                        android:textAlignment="center"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:elevation="4dp" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="16dp"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="LEVEL10"
                        android:onClick="tenthlevel"
                        android:id="@+id/level10"
                        android:textAlignment="center"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:elevation="4dp"/>
                </android.support.v7.widget.CardView>

            </LinearLayout>


    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>
